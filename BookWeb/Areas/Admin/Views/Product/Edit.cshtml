@model Product

<form method="post" class="border p-3 mt-4">
	<input asp-for="Id" hidden/>
	@* <div asp-validation-summary="All"></div> *@
	<div class="pb-2">
		<h2 class="text-center">Edit product</h2>
		<hr />
	</div>
	<div class="mb-3 p-1">
		<label asp-for="Title">Title</label>
		<input asp-for="Title" type="text" class="form-control" />
		<span class="text-danger" asp-validation-for="Title"></span>
	</div>
	<div class="mb-3 p-1">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" type="text" class="form-control"></textarea>
		<span class="text-danger" asp-validation-for="Description"></span>
	</div>
	<div class="mb-3 p-1">
		<label asp-for="ISBN"></label>
		<input asp-for="ISBN" type="text" class="form-control" />
		<span class="text-danger" asp-validation-for="ISBN"></span>
	</div>
	<div class="mb-3 p-1">
		<label asp-for="Author"></label>
		<input asp-for="Author" type="text" class="form-control" />
		<span class="text-danger" asp-validation-for="Author"></span>
	</div>
	<div class="mb-3 p-1">
		<label asp-for="ListPrice"></label>
		<input asp-for="ListPrice" type="text" class="form-control" />
		<span class="text-danger" asp-validation-for="ListPrice"></span>
	</div>
	<div class="mb-3 p-1">
		<label asp-for="Price"></label>
		<input asp-for="Price" type="text" class="form-control" />
		<span class="text-danger" asp-validation-for="Price"></span>
	</div>
	<div class="mb-3 p-1">
		<label asp-for="Price50"></label>
		<input asp-for="Price50" type="text" class="form-control" />
		<span class="text-danger" asp-validation-for="Price50"></span>
	</div>
	<div class="mb-3 p-1">
		<label asp-for="Price100"></label>
		<input asp-for="Price100" type="text" class="form-control" />
		<span class="text-danger" asp-validation-for="Price100"></span>
	</div>
	<div class="row">
		<div class="col-6 col-md-3">
			<input type="submit" class="form-control btn btn-primary" value="Update" />
		</div>
		<div class="col-6 col-md-3">
			<a asp-controller="Product" asp-action="index" class="btn btn-outline-secondary form-control">Return</a>
		</div>
	</div>
</form>