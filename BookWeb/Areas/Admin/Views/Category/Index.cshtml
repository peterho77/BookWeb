@using Book.Models

@model List<Category>

<partial name="_Notification"/>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-center text-capitalize text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create New Category</a>
		</div>
	</div>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Name</th>
				<th>Display Order</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var e in Model)
			{
				<tr>
					<td>@e.Name</td>
					<td>@e.DisplayOrder</td>
					<td>
						<div class="btn-group w-100" role="group">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@e.Id" class="btn btn-outline-primary mx-2 form-control">Edit</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@e.Id" class="btn btn-danger mx-2 form-control">Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

