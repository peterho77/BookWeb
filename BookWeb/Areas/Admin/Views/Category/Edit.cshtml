@model Category

<form method="post" class="border p-3 mt-4">
	<input asp-for="Id" hidden/>
	@* <div asp-validation-summary="All"></div> *@
	<div class="pb-2">
		<h2 class="text-center">Edit category</h2>
		<hr />
	</div>
	<div class="mb-3 p-1">
		<label asp-for="Name"></label>
		<input asp-for="Name" type="text" class="form-control" />
		<span class="text-danger" asp-validation-for="Name"></span>
	</div>
	<div class="mb-3 p-1">
		<label asp-for="DisplayOrder"></label>
		<input asp-for="DisplayOrder" type="text" class="form-control" />
		<span class="text-danger" asp-validation-for="DisplayOrder"></span>
	</div>
	<div class="row">
		<div class="col-6 col-md-3">
			<input type="submit" class="form-control btn btn-primary" value="Update" />
		</div>
		<div class="col-6 col-md-3">
			<a asp-controller="Category" asp-action="index" class="btn btn-outline-secondary form-control">Return</a>
		</div>
	</div>
</form>